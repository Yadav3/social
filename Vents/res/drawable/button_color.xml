<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ffffff" />
      <stroke
          android:width="0dp"
          android:color="#992f2f" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ffffff"
          android:endColor="#ffffff"  
          android:angle="90" />
      <stroke
          android:width="0dp"
          android:color="#992f2f" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>
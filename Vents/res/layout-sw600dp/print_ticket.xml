<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_top_size"
        android:background="@color/black"
        android:focusableInTouchMode="true" >

        <RelativeLayout
            android:id="@+id/menuLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_top_size" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="15dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_icon"
                android:text="" />

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="@string/pticket"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_button_height"
                android:textStyle="bold" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@color/white"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="right" >

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fname1"
                    android:layout_alignRight="@+id/fname1"
                    android:layout_below="@+id/fname1"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/enteryour"
                        android:textSize="@dimen/tab_button_height"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/star"
                        android:textColor="@color/red"
                        android:textSize="@dimen/tab_button_height1"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/ticketid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/linear1"
                    android:layout_alignRight="@+id/linear1"
                    android:layout_below="@+id/linear1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="@string/enteryour"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/black" >

                </EditText>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ticketid"
                    android:layout_alignRight="@+id/ticketid"
                    android:layout_below="@+id/ticketid"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/temail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textSize="@dimen/tab_button_height"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/star"
                        android:textColor="@color/red"
                        android:textSize="@dimen/tab_button_height1"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/linear2"
                    android:layout_alignRight="@+id/linear2"
                    android:layout_below="@+id/linear2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/black" >

                </EditText>

              
                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/email"
                    android:layout_alignRight="@+id/email"
                    android:layout_below="@+id/email"
                    android:orientation="horizontal" >
                </LinearLayout>

        

                <Button
                    android:id="@+id/update"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@+id/linear5"
                    android:layout_below="@+id/linear5"
                    android:layout_marginBottom="23dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/square"
                    android:text="@string/get_tickets"
                    android:textColor="@color/white"
                     android:textSize="@dimen/tab_button_height"
                    android:textStyle="bold" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/update" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
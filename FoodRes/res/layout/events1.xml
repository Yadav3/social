<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LYEventRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:id="@+id/LyEventDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/txtEvent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Venkatesh Abburi"
            android:textColor="#c90707"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtEvntDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:minLines="2"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:text="This place is like a big outdoor party.. lots of food,stream arising from every table and..."
            android:textColor="#666565"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/txtEvntLoc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hyderabad"
                android:textColor="#666565"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/date" />

            <TextView
                android:id="@+id/txtEvntDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hyderabad"
                android:textColor="#666565"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/txtEvntTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hyderabad"
                android:textColor="#666565"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="7dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvRestaurentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red_color" />

        <TextView
            android:id="@+id/tvAddressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#333333" />
         <TextView
            android:id="@+id/tvkeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvCusinelsit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/tvOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tvBrunchTimings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:visibility="gone" />
         <TextView
            android:id="@+id/tvHas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:visibility="gone" />
          <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:visibility="gone" />
           <TextView
            android:id="@+id/tvExistingBuffet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:visibility="gone" />

        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/distence_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/dialog_text_size" />
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/openOrClose"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
         android:paddingRight="10dp"
        android:contentDescription="@null"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="5dp" >

        <LinearLayout
            android:id="@+id/llStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/priceRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:text="@string/oneRupee"
                android:textColor="#000000"
                android:src="@drawable/rupee_symbol" />

            <ImageView
                android:id="@+id/ivHasDeals"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/has_deals" />
        </LinearLayout>

        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/call_bg"
            android:gravity="center"
            android:clickable="true" >

            <TextView
                android:id="@+id/btnPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/call_icon"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="040-5478"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDirections"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/directions"
            android:gravity="center"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/directions_icon_search"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/direction" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyBookTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/call_bg"
        android:clickable="true"
        android:gravity="center"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txtBookTable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Book a Table"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyOrderFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/call_bg"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/txtOrderFoodClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Order Food"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
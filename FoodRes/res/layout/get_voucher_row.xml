<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_orderdetails_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="3dp"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_type"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:minLines="1"
                android:singleLine="true"
                android:text="FCP Rice (Full)"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <LinearLayout
                android:id="@+id/ll_valuee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.9"
                android:gravity="center_horizontal|center_vertical"
                android:weightSum="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/minus"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#D8D8D8"
                    android:focusable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="-"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count_txt"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/plus"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/red_color"
                    android:focusable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
           
                 android:gravity="center"
                android:layout_weight="0.8" >

                <TextView
                    android:id="@+id/eachitemprice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/rupee_symbol"
                    android:focusable="false"
                    android:padding="3dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/eachitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/eachitemprice1"
                    android:background="@color/white"
                    android:focusable="false"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@color/black" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
           
                 android:gravity="center"
                android:layout_weight="0.8" >

                <TextView
                    android:id="@+id/totalprice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/rupee_symbol"
                    android:focusable="false"
                    android:padding="3dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/totalprice1"
                    android:background="@color/white"
                    android:focusable="false"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@color/black" />
            </RelativeLayout>
            

          <!--   <TextView
                android:id="@+id/totalprice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/rupee_symbol"
                android:focusable="false"
                android:gravity="center"
               
                android:padding="3dp"
                android:textColor="@color/black" /> -->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="3dp"
        android:background="#D8D8D8"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SVReservationDetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/txtReservationDetailsTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/btnClose"
                android:background="#ebebeb"
                android:padding="10dp"
                android:text="Raise dispute"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/LYDialog"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/txtBookingDetails"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsDate"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Reservation date"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsDate1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="Nov 13, 2013"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsVenue"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Venue details"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsVenue1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:lineSpacingExtra="2dp"
                        android:padding="10dp"
                        android:text="10 Lounge , Plot No 92 , Suryakiran Complex, Sarojini Devi Road"
                        android:textColor="@color/red_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsSession"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Session"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsSession1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="Lunch"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsPartySize"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Party size"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsPartySize1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout07"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsConfirmationNo"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Confirmation number"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsConfirmationNo1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="325"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsStatus"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Reservation status"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsStatus1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="active"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtReservationDetailsPoints"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/borderbg"
                        android:padding="10dp"
                        android:text="Reservation points"
                        android:textColor="#4e4e4e"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtReservationDetailsPoints1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/signupborder"
                        android:padding="10dp"
                        android:text="500"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout06"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"
                        android:text="Reason to raise dispute"
                        android:textColor="@color/red_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRaiseDisputeMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"
                        android:ems="10"
                      
                        android:inputType="textMultiLine"
                        android:minLines="3" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout08"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtUploadbills"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"
                        android:text="Upload bills"
                        android:textColor="@color/red_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/btnChooseFile1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginRight="10dp"
                            android:background="#555555"
                            android:padding="10dp"
                            android:text="Choose file"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No file chosen"
                            android:textColor="#555555"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btnClose1"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/txtReservationDetailsTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_wrong" />

            <TextView
                android:id="@+id/txtBookingDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtReservationDetailsTitle"
                android:layout_alignRight="@+id/btnClose"
                android:layout_below="@+id/txtReservationDetailsTitle"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Booking details"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/red_color"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/txtReservationDate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Date"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtReservationDate1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="Nov 13, 2013"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtReservationVenue"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Venue"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtReservationVenue1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="10 Lounge"
            android:textColor="@color/red_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtReservationSession"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Session"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtReservationSession1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="Lunch"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtReservationStatus"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Status"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtReservationStatus1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="active"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtReservationPoints"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Points"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtReservationPoints1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="500"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtMadeon"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Made on"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtMadeon1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="December 16th 2013"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
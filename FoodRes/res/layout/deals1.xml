<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LYRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgDeal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:id="@+id/LyDealDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/LYDeal1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txtVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Venkatesh Abburi"
                android:textColor="@color/red_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtLocation1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="NOV 10 , 2013"
                android:textColor="#818181"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="This place is like a big outdoor party.. lots of food,stream arising from every table and..."
            android:textColor="#000000"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/LyDeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/txtVoucher"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free voucher"
                android:textColor="@color/red_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtDeal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="View deal"
                android:textColor="@color/red_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
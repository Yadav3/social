<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/txtItemName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Item name"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtItemName1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:textColor="@color/red_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtVouchers"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Voucher(s)"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtVouchers1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtVoucherType"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Voucher Type"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtVoucherType1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtUnitPrice"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Unit price"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtUnitPrice1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:text="-"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Quantity"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtQuantity1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/borderbg"
            android:padding="10dp"
            android:text="Price"
            android:textColor="#4e4e4e" />

        <TextView
            android:id="@+id/txtPrice1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/signupborder"
            android:padding="10dp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
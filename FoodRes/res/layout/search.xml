<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_color" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/back"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_in_header"
                android:layout_marginTop="2dp"
                android:background="@drawable/textfield_background"
                android:drawableLeft="@drawable/location_icon"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/close1"
                android:ems="10"
                android:hint="Location"
                android:imeOptions="actionDone"
                android:padding="7dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone" >

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/etFind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_in_header"
                    android:layout_weight="1"
                    android:background="@drawable/textfield_background"
                    android:drawableLeft="@drawable/search_icon"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/close1"
                    android:ems="10"
                    android:hint="@string/Whatdofind"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:visibility="visible" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/txtGo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="GO"
                    android:textColor="@color/red_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="15dp"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/staticIconsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtBookTableIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/book_a_table_icon"
                android:drawablePadding="10dp"
                android:text="Book a table"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtOrderTkeAwayIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/order_takeaway_icon"
                android:drawablePadding="10dp"
                android:text="Order takeaway"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtHomeDelIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/home_delivery_icon"
                android:drawablePadding="10dp"
                android:text="Get home delivery"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/txtFindFastlaneIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/fastlane"
                android:drawablePadding="10dp"
                android:text="Fastlane pickup"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtFindDealsIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/find_deals_icon"
                android:drawablePadding="10dp"
                android:text="Find deals"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtOpenNowIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/opened_restuarants_icon"
                android:drawablePadding="10dp"
                android:text="Restaurants open now"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtHappyHrsIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/happy_hours_icon"
                android:drawablePadding="10dp"
                android:text="Happy hours"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtStarIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/star_property_icon"
                android:drawablePadding="10dp"
                android:text="Star property"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtRestaurantsIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/vegetarian_icon"
                android:drawablePadding="10dp"
                android:text="Vegetarian restaurants"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtDrinksIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/liquors_icon"
                android:drawablePadding="10dp"
                android:text="Go out for drinks"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtServingIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/breakfast_buffets_icon"
                android:drawablePadding="10dp"
                android:text="Restaurants serving buffet"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtSundayIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomborder"
                android:drawableLeft="@drawable/sunday_brunchs_icon"
                android:drawablePadding="10dp"
                android:text="Sunday brunch"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:divider="@drawable/line_devider" >
    </ListView>

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:visibility="gone"
        android:divider="@drawable/line_devider" >
    </ListView>
    <LinearLayout
        android:id="@+id/rlt_sut_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#313131"
            android:padding="10dp"
            android:text="Suggested Venues"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/suggested_listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line_devider" >
        </ListView>

        <TextView
            android:id="@+id/txtRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#313131"
            android:padding="10dp"
            android:text="Related Searches"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/related_listView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:divider="@drawable/line_devider" >
        </ListView>
        
    </LinearLayout>
  

</LinearLayout>
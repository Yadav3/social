<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/red_color" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="15dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/etRestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/back"
            android:text="Mast Kalandar"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceMedium"
             >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rrr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/det_layout"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
             >
             <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
      android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

             <RelativeLayout
                android:id="@+id/rr_service_tax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Service TAX"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serviceItemsCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:text="र 69"
                    android:textStyle="normal" />

            </RelativeLayout>
             
             
            <RelativeLayout
                android:id="@+id/rr_vat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rr_total"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="VAT"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/VatItemsCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:text="र 69"
                    android:textStyle="normal" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rr_delivery_charges"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rr_total"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Delivery charges"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/delivery_chargesItemsCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:text="र 69"
                    android:textStyle="normal" />

            </RelativeLayout>
            
            

            <RelativeLayout
                android:id="@+id/rr_total"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
               android:background="#7E7E7E"
               android:layout_below="@+id/rr_vat"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="TOTAL"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TotalItemsCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:text="र 69"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                
            </RelativeLayout>
            <TextView
                    android:id="@+id/mim_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="Minimum Order amount Rs:"
                    android:textColor="@color/white"
                    android:background="#FF0000" 
                    android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/al_regions1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:layout_margin="6dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay1"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay1"
                    android:layout_marginRight="-60dp"
                    android:layout_weight="1"
                    android:text="Time(HH:mm)"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/date_picker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/select_box"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/timepicker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/select_box"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:textColor="#3D3D3D"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/al_regions1"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="Add Instructions, If any"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_spl_instruction"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/all"
            android:inputType="textMultiLine"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="top|left"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:background="@drawable/edittext"
            android:textColor="@color/black"
             />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_spl_instruction"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Order Type"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_type"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/green"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:text="Pickup Order"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/textView1"
           
            android:layout_weight="1"
            android:background="@color/red_color"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="Continue to confirm"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
    </RelativeLayout>

    <ListView
        android:id="@+id/order_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rrr"
        android:layout_below="@id/top_layout"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp" />

</RelativeLayout>